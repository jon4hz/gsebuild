{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2023",
    "module": "NodeNext",
    "lib": ["ES2023"],
    "removeComments": false,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  },
  "include": ["types.d.ts", "src/**/*.ts"]
}
